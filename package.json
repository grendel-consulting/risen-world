{
  "name": "risen-world",
  "version": "0.1.5",
  "description": "Strategic narrative toy, mashing up some Roguelike, 4X and CRPG concepts",
  "main": "index.js",
  "repository": "https://github.com/grendel-consulting/risen-world.git",
  "author": "James Ramirez <ramirezj@users.noreply.github.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": {
    "production": [
      "last 1 versions",
      "not dead",
      ">5%"
    ],
    "ssr": [
      "node 14",
      "node 15"
    ]
  },
  "devDependencies": {
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "^0.27.1",
    "prettier": "2.2.1",
    "standard-version": "9.1.1"
  },
  "scripts": {
    "release": "standard-version"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":pinAllExceptPeerDependencies",
      "schedule:weekly"
    ],
    "labels": [
      "dependencies"
    ],
    "packageRules": [
      {
        "depTypeList": [
          "dependencies",
          "peerDependencies"
        ],
        "automerge": true,
        "major": {
          "automerge": false
        }
      },
      {
        "depTypeList": [
          "devDependencies"
        ],
        "automerge": true
      }
    ],
    "postUpdateOptions": [
      "yarnDedupeHighest"
    ],
    "timezone": "Europe/London",
    "vulnerabilityAlerts": {
      "labels": [
        "security"
      ],
      "assignees": [
        "@ramirezj"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint",
      "prettier --write"
    ],
    "*.{css}": "prettier --write",
    "*.{md}": [
      "markdownlint",
      "prettier --write"
    ]
  }
}
