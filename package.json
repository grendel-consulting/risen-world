{
  "name": "risen-world",
  "version": "0.1.3",
  "description": "Strategic narrative toy, mashing up some Roguelike, 4X and CRPG concepts",
  "main": "index.js",
  "repository": "https://github.com/grendel-consulting/risen-world.git",
  "author": "James Ramirez <ramirezj@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "=4",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.1"
  },
  "scripts": {
    "release": "standard-version"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":pinAllExceptPeerDependencies",
      "schedule:weekly"
    ],
    "labels": [
      "dependencies"
    ],
    "packageRules": [
      {
        "depTypeList": [
          "dependencies",
          "peerDependencies"
        ],
        "automerge": true,
        "major": {
          "automerge": false
        }
      },
      {
        "depTypeList": [
          "devDependencies"
        ],
        "automerge": true
      }
    ],
    "postUpdateOptions": [
      "yarnDedupeHighest"
    ],
    "timezone": "Europe/London",
    "vulnerabilityAlerts": {
      "labels": [
        "security"
      ],
      "assignees": [
        "@ramirezj"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
